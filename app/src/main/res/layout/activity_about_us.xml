<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@color/grey_600">


    <ImageView
        android:id="@+id/smrt_trvlr_iv"
        android:layout_width="229dp"
        android:layout_height="221dp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/traveller" />

    <TextView
        android:id="@+id/smrt_trvlr_tv"
        android:layout_width="250dp"
        android:layout_height="62dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Smart Traveler"
        android:textAllCaps="true"
        android:textColor="#FDFCFC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smrt_trvlr_iv"
        app:layout_constraintVertical_bias="0.217" />

    <TextView
        android:id="@+id/sub_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:fontFamily="@font/sofia_pro_regular"
        android:text="Smart Traveler is a travel guiding application which is very user-friendly
application. Here we fully focused on Traveler or a Tourist. By using this application
features, a tourist or traveler can easily make choose a best trip here, and also they
can find most needed opportunities for making their trip more attractive and
successful."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smrt_trvlr_tv"
        app:layout_constraintVertical_bias="0.0" />
</LinearLayout>