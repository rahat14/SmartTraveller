<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDF1E837"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/sofia_pro_medium"
        android:gravity="center"
        android:text="Lets Get Started."
        android:textColor="@color/primary_text_clr"
        android:textSize="@dimen/_24ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <RelativeLayout
              android:id="@+id/ppContianer"
              android:layout_marginTop="@dimen/_14sdp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/pp"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_centerInParent="true"
                  android:src="@drawable/placeholder" />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_toEndOf="@+id/pp"
                  android:layout_alignParentBottom="true"
                  android:layout_marginStart="-10dp"
                  android:text="Click To Change"
                  android:layout_height="wrap_content"/>

          </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:boxStrokeColor="@color/primary_text_clr"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/primary_text_clr">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Personname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="Your Name"
                    android:inputType="text"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:boxStrokeColor="@color/primary_text_clr"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/primary_text_clr">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PersonEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="Your Email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:boxStrokeColor="@color/primary_text_clr"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/primary_text_clr">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="Your Phone"
                    android:inputType="phone"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/passContianer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:boxStrokeColor="@color/primary_text_clr"
                app:hintAnimationEnabled="true"
                app:passwordToggleEnabled="true"
                app:hintTextColor="@color/primary_text_clr">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PersonPass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:boxStrokeColor="@color/primary_text_clr"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/primary_text_clr"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:gravity="bottom"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/purple_700"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:backgroundTint="@color/button_clr"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="Sign Up"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_16sdp" />


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofia_pro_light"
                android:text="Already Have Account"
                android:textColor="@color/text_clr"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/signinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/sofia_pro_medium"
                android:text="Sign In"
                android:textColor="@color/primary_text_clr"
                android:textSize="@dimen/_14ssp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
